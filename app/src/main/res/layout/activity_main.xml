<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.zhangbing.love.MainActivity">

    <Button
        android:id="@+id/but_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击跳转页面" />

    <Button
        android:id="@+id/but_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击请求网络" />

    <Button
        android:id="@+id/but_rxjava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rxjava" />


    <Button
        android:id="@+id/btn_double"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rxjava+retrofit实现网络请求" />

    <Button
        android:id="@+id/btn_okGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="okGo实现网络请求" />


    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_Base_RecycleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="练习BaseRecycleViewHolderHelper" />


</LinearLayout>
